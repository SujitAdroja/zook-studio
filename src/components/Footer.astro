    </div>
  </div>
</footer>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger, SplitText } from "gsap/all";
  gsap.registerPlugin(ScrollTrigger, SplitText);
  const scrollTimeline = gsap.timeline({
    scrollTrigger: {
      trigger: ".footer",
      start: "top center",
    },
  });
  const paraSplit = SplitText.create(".para-footer", { type: "lines,chars" });
  const logoSplit = SplitText.create(".logo-footer", { type: "lines , chars" });
  const h2Split = SplitText.create(".h2-footer", { type: "lines , chars" });
  const navFooterSplit = SplitText.create(".nav-footer li", { type: "lines" });
  scrollTimeline.from(h2Split.chars, {
    opacity: 0,
    duration: 1,
    yPercent: 100,
    ease: "expo.out",
    stagger: 0.02,
  });

  scrollTimeline.from(paraSplit.lines, {
    opacity: 0,
    duration: 1,
    yPercent: 100,
    ease: "expo.out",
    stagger: 0.02,
  });

  scrollTimeline.from(logoSplit.chars, {
    opacity: 0,
    duration: 1,
    yPercent: 100,
    ease: "expo.out",
    stagger: 0.02,
  });
  scrollTimeline.from(navFooterSplit.lines, {
    opacity: 0,
    duration: 1,
    yPercent: 100,
    ease: "expo.out",
    stagger: 0.2,
  });
</script>
