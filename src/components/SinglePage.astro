      trigger: ".details",
      start: "top center",
    },
  });

  const detailsHeaderSplit = SplitText.create(".project-details-title", {
    type: "lines",
  });

  detailsScrollTimeline.from(detailsHeaderSplit.chars, {
    opacity: 0,
    duration: 1,
    yPercent: 80,
    ease: "expo.out",
    stagger: 0.02,
  });

  detailsScrollTimeline.from(".top-grid , .bottom-grid", {
    opacity: 0,
    duration: 1,
    yPercent: 100,
    ease: "expo.out",
    stagger: 0.09,
  });

  //projects
  const projectsTitleSplit = SplitText.create(".projects-heading", {
    type: "words,chars",
  });

  const projectsScrollTimeline = gsap.timeline({
    scrollTrigger: {
      trigger: ".projects-container",
      start: "top center",
    },
  });
  projectsScrollTimeline.from(".related-projects-container", {
    opacity: 0,
    duration: 1,
    yPercent: 100,
    ease: "expo.out",
  });

  projectsScrollTimeline.from(
    ".related-tag",
