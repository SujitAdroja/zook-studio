<script>
  import { gsap } from "gsap";
  import { ScrollTrigger, SplitText } from "gsap/all";
  gsap.registerPlugin(ScrollTrigger, SplitText);

  gsap.from(".hero-image-container", {
    scale: 1.2,
    duration: 1,
    ease: "expo.out",
  });
  gsap.from(".title-tag", {
    opacity: 0,
    duration: 1,
    yPercent: -100,
    delay: 0.5,
    ease: "expo.out",
    stagger: 0.01,
  });
  gsap.from(".hero-heading", {
    opacity: 0,
    duration: 1,
    yPercent: 100,
    delay: 0.5,
    ease: "expo.out",
    stagger: 0.02,
  });
  const heroDescriptionSplit = SplitText.create(".hero-description", {
    type: "lines",
  });

  gsap.from(heroDescriptionSplit.lines, {
    opacity: 0,
    duration: 1.5,
    yPercent: 300,
    delay: 0.5,
    ease: "expo.out",
    stagger: 0.05,
  });

  // project details
  const projectDetailsTimeline = gsap.timeline({
    scrollTrigger: {
      trigger: ".project-details",
      start: "top center",
    },
  });

  const proejctDetailsHeaderSplit = SplitText.create(".project-details-title", {
    type: "lines",
  });
  const proejctDetailsDescriptionSplit = SplitText.create(
    ".project-details-description",
    {
      type: "lines",
    }
  );
  const projectTimelineSplit = SplitText.create(".project-details-timeline", {
    type: "lines",
  });
  projectDetailsTimeline.from(proejctDetailsHeaderSplit.lines, {
    opacity: 0,
    duration: 1,
    yPercent: 300,
    ease: "expo.out",
    stagger: 0.05,
  });
  projectDetailsTimeline.from(".project-details-images", {
    opacity: 0,
    xPercent: 100,
    duration: 0.3,
    ease: "expo.out",
  });
  projectDetailsTimeline.from(
    proejctDetailsDescriptionSplit.lines,
    {
      opacity: 0,
      duration: 1,
      yPercent: 300,
      ease: "expo.out",
      stagger: 0.05,
    },
    "-=70%"
  );
  projectDetailsTimeline.from(
    projectTimelineSplit.lines,
    {
      opacity: 0,
      duration: 1,
      yPercent: 300,
      ease: "expo.out",
      stagger: 0.05,
    },
    "-=70%"
  );

  // details informations about rooms animation scroll animation

